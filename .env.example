# =============================================================================
# COMPLIANCEOS ENVIRONMENT VARIABLES
# =============================================================================

# Application
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-organization-id

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Resend Email
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@complianceos.com

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=complianceos-files

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Mixpanel Analytics
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# REGULATORY CONTENT SOURCES
# =============================================================================
ANSM_API_KEY=your-ansm-api-key
DGCCRF_API_KEY=your-dgccrf-api-key
LEGIFRANCE_API_KEY=your-legifrance-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ASSISTANT=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_WORKFLOW_AUTOMATION=true
FEATURE_INTEGRATIONS=true
FEATURE_MOBILE_APP=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000,https://complianceos.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=complianceos-backups

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These variables are only used in development mode

# Database Seeding
SEED_DATABASE=false
SEED_ADMIN_EMAIL=admin@complianceos.com
SEED_ADMIN_PASSWORD=ComplianceAdmin123!

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/complianceos_test
TEST_OPENAI_API_KEY=test-openai-key
TEST_STRIPE_SECRET_KEY=sk_test_test-stripe-key

# Debug
DEBUG=complianceos:*
DEBUG_COLORS=true
DEBUG_HIDE_DATE=false